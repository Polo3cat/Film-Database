<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_help"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pr_idi.mydatabaseexample.Help">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_below="@+id/toolbar">
        <TextView
            android:text="Welcome to Our Film Library!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/textView6"
            android:textAllCaps="true"
            android:textSize="20dp"
            />
        <TextView
            android:text="Here are a few tips on how it works and how you can manage it:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/textView7"
            android:textSize="17dp"
            />
        <TextView
            android:text="1. You can navigate from the Home view into the others with the navigation panel."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/textView8"
            />
        <TextView
            android:text="2. The navigation panel will appear by sliding your finger from the left to the right side of the screen or tapping the three line on the top left corner of the screen."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/textView9"
            />
        <TextView
            android:text="3. Long pressing a film will prompt a menu to either rate or delete it."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/textView10"
            />
        <TextView
            android:text="4. Pressing on a film on the main view will display its information."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/textView20"
            />
        <TextView
            android:text="5. You may erase all your films by pressing the button below."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/textView11"
            />

        <Button
            android:text="Delete all films"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:onClick="onClick"/>
    </LinearLayout>
</RelativeLayout>
